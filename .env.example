# ============================================================================
# REQUIRED: API Keys (you MUST set these)
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# ============================================================================
# OPTIONAL: Agent Configuration (has defaults)
# ============================================================================
AGENT_NAME=mapbox_location_agent
AGENT_DEBUG=false

# ============================================================================
# OPTIONAL: Langfuse Observability (for monitoring - leave blank to disable)
# ============================================================================
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# ============================================================================
# OPTIONAL: BrightData (not currently used)
# ============================================================================
# BRIGHTDATA_TOKEN=your_token_here

# ============================================================================
# OPTIONAL: Redis (for FastAPI multi-user system - has defaults)
# ============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================================================
# OPTIONAL: FastAPI Server (has defaults)
# ============================================================================
# API_HOST=0.0.0.0
# API_PORT=8000
# API_RELOAD=true

# ============================================================================
# OPTIONAL: Session Management (has defaults)
# ============================================================================
# SESSION_TTL_HOURS=24
# MAX_SESSIONS=100
# MAX_MESSAGES_PER_SESSION=50

# ============================================================================
# OPTIONAL: Model Configuration (has defaults)
# ============================================================================
# GEMINI_MODEL=gemini-2.0-flash-exp
# GEMINI_TEMPERATURE=0.7
# GEMINI_MAX_TOKENS=2048

# ============================================================================
# OPTIONAL: Logging (has defaults)
# ============================================================================
# LOG_LEVEL=INFO
